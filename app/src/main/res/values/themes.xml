<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LeagueNow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_9acc50</item>
        <item name="colorPrimaryVariant">@color/green_75a359</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_4c6179</item>
        <item name="colorSecondaryVariant">@color/blue_353c53</item>
        <item name="colorOnSecondary">@color/blue_22283d</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">shortEdges</item>
    </style>
    <!--.............................Styles - Title......................................-->
    <style name="TextViewTitle">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gordita_regular</item>
        <item name="android:textColor">@color/blue_22283d</item>
    </style>

    <style name="TextViewTitle.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewTitle.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewTitle.Big">
        <item name="android:textSize">34sp</item>
    </style>


    <!-- Cards - Title-->
    <style name="CardTitle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/gordita_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardTitle.Small">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gordita_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>